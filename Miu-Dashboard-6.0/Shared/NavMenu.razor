@inject NavigationManager _nav

<nav class="@navMenuToggle" style="background: #2a3056;">
    <div class="container-fluid d-flex flex-column p-0"><a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
            <div class="sidebar-brand-icon rotate-n-15"><i class="fas fa-music"></i></div>
            <div class="sidebar-brand-text mx-3"><span>Miu Dashboard</span></div>
        </a>
        <hr class="sidebar-divider my-0">
        <ul class="navbar-nav text-light" id="accordionSidebar">
            <li class="nav-item"><NavLink class="nav-link" Match="NavLinkMatch.All" ActiveClass="active" href="@($"{_nav.Uri[_nav.Uri.LastIndexOf("/", StringComparison.Ordinal)..].Replace("/", "")}")"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></NavLink></li>
            <li class="nav-item"><NavLink class="nav-link" ActiveClass="active" href="@($"table/{_nav.Uri[_nav.Uri.LastIndexOf("/", StringComparison.Ordinal)..].Replace("/", "")}")"><i class="fas fa-table"></i><span>History</span></NavLink></li>
        </ul>
        <div class="text-center d-none d-md-inline">
            <button class="btn rounded-circle border-0" id="sidebarToggle" type="button" @onclick="ToggleNavMenu"></button>
        </div>
    </div>
</nav>

@code {
    string navMenuToggle = "navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0";
    
    private void ToggleNavMenu()
    {
        navMenuToggle = navMenuToggle.Contains("toggled") ? "navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0" : "navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0 toggled";
    }
}